<h1>User Index</h1>

<% @users.each do |user| %>
  <div class="user">
    <div class="photo">
      <% if user.photo.present? %>
        <%= image_tag user.photo, size: "100x100" %>
      <% else %>
        <%= image_tag "default-avatar.jpg", size: "100x100" %>
      <% end %>
    </div>
    <div class="user-details">
      <h3><%= user.name %></h3>
      <p class="user-posts">Number of Posts: <%= user.posts.count %></p>
    </div>
    <%= link_to user_path(user) do %>
      <div class="user-link">
        View Profile
      </div>
    <% end %>
  </div>
<% end %>
